<div class = "container">
  <h1><%= t('index.tasks')%></h1>
  <table>
    <tr>
      <th><%= t('index.task_name')%></th>
      <th><%= t('index.task_details')%></th>
    </tr>
    <%@tasks.each do |task|%>
    <tr>
      <td><p class = index_task_name><%= task.task_name%></p></td>
      <td><p class = index_task_details><%= task.task_details%></p></td>
      <td><p class = index_details_button><%= link_to t('index.details'),task_path(task.id)%></p></td>
      <td><%= link_to t('index.edit'),edit_task_path(task.id)%></td>
      <td><%= link_to t('index.destroy'),task_path(task.id),method: :delete%></td>
    </tr>
    <% end %>  
  </table>
  <%=link_to t('index.create'),new_task_path%>
</div>     
