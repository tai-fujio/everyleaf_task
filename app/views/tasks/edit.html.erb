<div class = "container">
  <h1><%= t('edit.task_edit')%></h1>
  <% if @task.errors.any? %>
    <div>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>  
      </ul>
    </div>
  <% end %>
  <%= form_with(model:@task,local:true) do |f| %>
    <%= f.label t('edit.task_name') %> :
    <%= f.text_field :task_name %><br>
    <%= f.label t('edit.task_details')%> :
    <%= f.text_area :task_details %><br>
    <%= f.submit t('edit.edit_button')%><br>
  <% end %>
  <%= link_to t('edit.back'), tasks_path %>
</div>   
