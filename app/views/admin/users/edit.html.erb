<div class = "container">
  <h1 class = "title"><%= t('admin_users_edit.title')%></h1>
  <table>
  <tr>
    <th></th>
  </tr>
  <%= form_with(model: @user,url:admin_user_path,local: true) do |f| %>
    <tr>
      <td><%= f.label t('admin_users_edit.name') %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label t('admin_users_edit.email') %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label t('admin_users_edit.password') %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label t('admin_users_edit.password_confirmation') %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td>
        <%= f.label t('admin_users_edit.user_type') %>
      </td>
      <td>
        <%= f.radio_button :admin_or_not ,true%>
        <%= f.label t('admin_users_edit.admin') %>
        <%= f.radio_button :admin_or_not ,false %>
        <%= f.label t('admin_users_edit.user') %>
      </td>
    </tr>
    </table>
    <%= f.submit t('admin_users_edit.edit'),class: "edit_user_button btn-primary"%><br>
  <% end %>
  <%= link_to t('admin_users_edit.back'), admin_users_path %>
</div>
